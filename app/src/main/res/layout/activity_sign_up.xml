<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up With Email"
            android:textColor="@color/secondaryColor"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please create your account and keep your privacy."
            android:textColor="@color/secondaryVariant"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/signup_full_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_circle"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/person_icon"
            android:paddingStart="15dp"
            android:hint="Full Name"
            android:inputType="text"
            android:textColor="@color/secondaryColor"
            android:paddingEnd="20dp"
            android:drawablePadding="20dp"/>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_circle"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/email_icon"
            android:paddingStart="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/secondaryColor"
            android:paddingEnd="20dp"
            android:drawablePadding="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_circle"
                android:drawableStart="@drawable/key_icon"
                android:drawablePadding="20dp"
                android:paddingEnd="45dp"
                android:paddingStart="15dp"
                android:textColor="@color/secondaryColor"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/signup_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_circle"
                android:drawableStart="@drawable/key_icon"
                android:drawablePadding="20dp"
                android:paddingStart="15dp"
                android:paddingEnd="45dp"
                android:textColor="@color/secondaryColor"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signup_create_account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/colorful_rectangle_circle"
            android:layout_marginTop="50dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/secondaryColor"/>

        <ProgressBar
            android:id="@+id/signup_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/signup_login_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Already have an account? Sign In"
            android:textColor="@color/secondaryColor"/>

    </LinearLayout>

</RelativeLayout>